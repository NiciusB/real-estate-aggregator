{
  "eslint.workingDirectories": [
    "./packages/crawler",
    "./packages/frontend"
  ],
  "files.watcherExclude": {
    "**/node_modules/*/**": true
  },
  "editor.tabSize": 2,
  "files.eol": "\n",
